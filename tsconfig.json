{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",    
    "rootDir": "./src/",
    "outDir": "./lib/",
    "module": "commonjs",    
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "removeComments": true
  }, 
  "exclude": [
    "node_modules",
    "stories",
    "test"
  ]
}